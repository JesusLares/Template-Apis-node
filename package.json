{
  "name": "template_apis_node",
  "version": "0.0.0",
  "description": "Template for APIs made in node js with a basic structure",
  "main": "index.js",
  "repository": "https://github.com/Jesus-Lares/Template-Apis-node.git",
  "author": "Jesus Lares Cotreras <jesus.lares2000@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register --respawn --transpile-only ./src/index.ts",
    "lint": "eslint './src/**/*.ts'",
    "lint:fix": "eslint './src/**/*.ts' --fix",
    "start": "NODE_ENV=production node build/index.js",
    "prepare": "husky install",
    "clean": "rm -rf coverage src/**/*.js src/**/*.map",
    "build": "npm run clean -rf ./build && tsc",
    "test": "NODE_ENV=test && jest --silent --detectOpenHandles --no-cache",
    "test:server": "NODE_ENV=test && jest --no-cache"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.8",
    "@types/jest": "^27.5.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.33",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "^8.15.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^3.4.0",
    "eslint-plugin-import": "^2.26.0",
    "faker": "^5.5.3",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "helmet": "^5.0.2",
    "joi": "^17.6.0",
    "morgan": "^1.10.0",
    "mysql2": "^2.3.3",
    "sequelize": "^6.21.4",
    "swagger-jsdoc": "^6.2.3",
    "swagger-ui-express": "^4.5.0"
  },
  "imports": {
    "@context/*": "./src/context/*"
  }
}
